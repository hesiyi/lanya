    <Button
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:id="@+id/btnO3"
        android:background="#ff25baff"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignLeft="@+id/btnSO2"
        android:layout_alignStart="@+id/btnSO2" />

    <Button
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:id="@+id/btnCO"
        android:background="#ff25baff"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignLeft="@+id/btnCO2"
        android:layout_alignStart="@+id/btnCO2" />

